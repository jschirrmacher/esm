{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "rootDir": ".",
    "outDir": "./dist",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
